<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:card="sap.f.cards"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    height="100%"
>
    <Page
        showHeader="false"
        enableScrolling="true"
        class="sapUiContentPadding"
    >
        <content>
            <Table
                id="cartTable"
                class="sapFDynamicPageAlignContent"
                width="auto"
                items="{
			        path: '/ShopCartView'
		        }"
            >
                <columns>
                    <Column width="12em">
                        <Text text="Image" />
                    </Column>
                    <Column width="12em">
                        <Text text="Title" />
                    </Column>
                    <Column width="12em">
                        <Text text="Rating" />
                    </Column>
                    <Column width="12em">
                        <Text text="Price" />
                    </Column>
                    <Column width="12em">
                        <Text text="Total Price" />
                    </Column>
                    <Column width="12em">
                        <Text text="Quantity" />
                    </Column>
                    <Column width="12em">
                        <Text text="Delete" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <Image
                            src="{images/url}"
                            width="100%"
                            height="10em"
                            backgroundSize="cover"
                        />
                        <Title
                            text="{title}"
                            wrapping="true"
                            textAlign="Initial"
                        />
                        <RatingIndicator
                            value="{rating}"
                            maxValue="5"
                            visualMode="Half"
                        />

                        <Title text="{price}" />

                        <Text text="{totalPrice}" />

                        <StepInput
                            id="CurrentValue"
                            value="{quantity}"
                            min="1"
                            width="100px"
                            change="currentChangeHandler"
                        />

                        <Button
                            type="Reject"
                            icon="sap-icon://delete"
                            press="onDelete"
                        />
                    </ColumnListItem>
                </items>
            </Table>

            <HBox
                justifyContent="End"
                class="sapUiContentPadding"
            >
                <f:Card
                    class="sapUiMediumMargin"
                    width="90%"
                    height="auto"
                >
                    <f:header>
                        <card:Header title="Different Values" />
                    </f:header>
                    <f:content>
                        <List
                            class="sapUiSmallMarginBottom"
                            showSeparators="None"
                            items="{
			                path: 'TestModel>/cartItems'
		                    }"
                        >
                            <CustomListItem>
                                <HBox
                                    alignItems="Center"
                                    justifyContent="SpaceBetween"
                                >
                                    <VBox
                                        class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                    >
                                        <Title
                                            level="H3"
                                            text="TotalPrice: {TestModel>totalPrice}"
                                        />
                                        <Text
                                            text="Quantity: {TestModel>quantity}"
                                        />
                                        <Text
                                            text="Total: {TestModel>fTotalAmount}"
                                        />
                                    </VBox>
                                </HBox>
                            </CustomListItem>
                        </List>
                    </f:content>
                </f:Card>
            </HBox>
            <HBox justifyContent="End">
                <Button
                    width="100%"
                    icon="sap-icon://cart-approval"
                    text="Chack Out"
                    type="Accept"
                    press="chackOut"
                />
            </HBox>
        </content>
    </Page>
</core:FragmentDefinition>
