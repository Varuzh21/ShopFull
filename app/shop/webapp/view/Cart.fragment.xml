<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <Table
        id="cartTable"
        class="sapFDynamicPageAlignContent"
        width="auto"
        items="{
			path: '/ShopCartView'
		}"
    >
        <headerToolbar>
            <Toolbar>
                <Button
                    text="Chack Out"
                    type="Emphasized"
                    press="chackOut"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column width="12em">
                <Text text="Image" />
            </Column>
            <Column width="12em">
                <Text text="Title" />
            </Column>
            <Column width="12em">
                <Text text="Rating" />
            </Column>
            <Column width="12em">
                <Text text="Price" />
            </Column>
            <Column width="12em">
                <Text text="Total Price" />
            </Column>
            <Column width="12em">
                <Text text="Quantity" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <Image
                    src="{images/url}"
                    width="100%"
                    height="10em"
                    backgroundSize="cover"
                />
                <Title
                    text="{title}"
                    wrapping="true"
                    textAlign="Initial"
                />
                <RatingIndicator
                    value="{rating}"
                    maxValue="5"
                    visualMode="Half"
                />

                <Title text="{price}" />

                <Text text="{totalPrice}" />

                <StepInput
                    id="CurrentValue"
                    value="{quantity}"
                    min="1"
                    width="100px"
                    change="currentChangeHandler"
                />
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>