<mvc:View
    controllerName="com.shop.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:ux="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="dynamicPageId"
        toggleHeaderOnTitleClick="false"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:actions>
                
                    <Button icon="sap-icon://cart" press=".onNav" />

                    <core:Fragment
                        fragmentName="com.shop.view.AvatarActiveState"
                        type="XML"
                    />
                </f:actions>

                <f:heading>
                    <Title text="Categoris" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <Table
                id="categorisTable"
                mode="SingleSelectMaster"
                itemPress=".onNavigate"
                inset="false"
                items="{
					path: '/Categoris',
                    sorter: {path: 'name'}
				}"
                class="sapFDynamicPageAlignContent"
                width="auto"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <SearchField
                            search="onSearch"
                            width="17.5rem"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://add"
                            type="Transparent"
                            press=".onAdd"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://sort"
                            type="Transparent"
                            press="onSort"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Categoris" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <ObjectIdentifier text="{name}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
