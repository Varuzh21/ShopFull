<mvc:View
    controllerName="com.shop.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <f:ShellBar>
        <f:profile>
            <Avatar
                id="myAvatar"
                displaySize="XS"
                showBorder="true"
                class="sapUiTinyMargin"
                press="onPress"
            />
        </f:profile>
    </f:ShellBar>
    <App id="App">
        <f:FlexibleColumnLayout
            id="fcl"
            layout="{AppView>/layout}"
            backgroundDesign="Translucent"
        />
    </App>
</mvc:View>