<mvc:View
    controllerName="com.shop.shop.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:ux="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="dynamicPageId"
        toggleHeaderOnTitleClick="false"
    >
        <f:title>
            <f:DynamicPageTitle id="e">
                <f:heading>
                    <Title
                        id="f"
                        text="Product Section"
                    />
                </f:heading>

                <f:navigationActions>
                    <OverflowToolbarButton
                        id="1"
                        icon="sap-icon://add"
                        type="Transparent"
                        press=".onAdd"
                    />

                    <OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://full-screen"
                        press=".handleFullScreen"
                        id="enterFullScreenBtn"
                        tooltip="Enter Full Screen Mode"
                        visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"
                    />

                    <OverflowToolbarButton
                        id="enterClose"
                        type="Transparent"
                        icon="sap-icon://decline"
                        press=".handleClose"
                        tooltip="Close middle column"
                        visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"
                    />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <List
                id="detailTable"
                mode="SingleSelectMaster"
                itemPress=".onNavigate"
                inset="false"
                items="{
                path: '/Product'
                }"
                class="sapFDynamicPageAlignContent"
                width="auto"
            >
                <items>
                    <ObjectListItem type="Navigation" id="movieListItem"
                        title="{title}"
                        icon="{images}"
                    />
                </items>
            </List>
        </f:content>

    </f:DynamicPage>
</mvc:View>
